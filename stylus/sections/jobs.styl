/* JOBS.STYL ======================================= */

#download.m0
    margin: 0
    background: colorWhite

#jobs
    flexbox()
    justify-content: center
    flex-flow: row wrap
    padding: 50px

    .jobs__item
        width: 170px
        height 170px
        flexbox()
        flex-center()
        flex-flow: column nowrap
        align-items: center
        background: colorWhite
        border-radius(50%)
        margin: 0 15px 30px 15px
        transition(.3s)
        cursor pointer
        overflow: hidden
        border: 6px solid colorBlue
        box-sizing()

        &:last-child
            margin-bottom: 0

        &:hover
            transform-scale(1.1)
            box-shadow(0 0 30px colorBlack06)

    .jobs__name
        font-size: 16px
        font-weight: 700
        color: colorBlack

    .jobs__logo
        flexbox()
        flex-center()
        width: 100px
        height 100px
        overflow: hidden
        object-fit: cover
        margin-top: -40px

