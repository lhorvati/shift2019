/* TESTIMONIALS.STYL ======================================= */

#testimonials

    .testimonials
        flexbox()
        justify-content: space-between
        margin-top: 50px

    .testimonials-item
        width: 30%

        .v-top
            vertical-align: top

        .testimonials__img
            width: 60px
            height: 60px
            margin-right: 20px
            border-radius(100%)
            overflow: hidden

            &.quote
                background: url("../img/icons/quotes.svg") no-repeat
                background-position: 100% 12px
                background-size: 30px
                border-radius(0)

        .testimonials__name
            font-size: 12px
            font-weight: 700
            color: colorBlue
            text-transform: uppercase
            margin-bottom: 20px

        .testimonials__title
            font-family: font2
            font-style: italic
            font-size: 12px
            color: colorGray

        .testimonials__text
            font-family: font2
            font-size: 12px
            line-height: 17px
            margin-top: 10px