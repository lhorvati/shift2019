/* NOTE.STYL ======================================= */

#note
    padding: 200px 0
    background: colorBlueDark

    .container
        flexbox()
        flex-flow: column nowrap

        h1
            color: white
            margin: 100px 0 70px 0

            &:first-child
                margin: 0px 0 90px 0


        h2
            margin: 40px 0 20px 0

            &.job-title
                padding-top: 100px
                font-size: 36px
                text-decoration: underline


        h3
            font-size: 20px
            color: colorWhite
            font-weight: 800
            margin-bottom: 30px

        p
            color: white
            line-height: 1.5
            font-size: 20px
            margin-bottom: 20px

            a
                color: colorBlueLight

                &:hover
                    text-decoration: underline

        ul
            padding-left: 30px
            box-sizing()

            li
                list-style-type disc
                display: list-item
                color: white
                line-height: 1.5
                font-size: 20px

                a
                    transition(.3s)

                    &:hover
                        color: colorBlueLight
                        margin-left: 5px


    .back-to-top
        flexbox()
        flex-center()
        width: 50px
        height 50px
        background: url("../img/icons/play_button.svg") center no-repeat
        background-size: 50px
        cursor pointer
        transform: rotate(-90deg)
        position fixed
        right: 30px
        bottom: 30px
        z-index 10