/* HERO.STYL ======================================= */

#hero
    background: colorBlueDark url(../img/top-bg.svg) center no-repeat
    background-size: cover
    height: 100vh
    flexbox()
    flex-center()
    position: relative
    z-index: 1
    color: colorWhite


.heroBox
    flexbox()
    flex-flow: column nowrap
    align-items: flex-start

    .heroBox__date
        flexbox()
        align-items: center
        font-size: 12px

        .heroBox__date--text
            font-family: font2

        .heroBox__date--line
            width: 34px
            height: 1px
            background: colorBlue
            margin: 0 10px

    .heroBox__heading
        font-size: 30px
        margin: 30px 0
        line-height: 36px

        strong
            color: colorBlue

    .heroBox__buttons
        flexbox()
        align-items: center

        .heroBox__buttons-spacer
            margin: 0 10px 0 24px


.heroDate
    position: absolute
    flexbox()
    font-size: 30px
    font-family: font2
    font-weight: 700
    transform: rotate(90deg)
    bottom: 0
    right: 0
    margin: 0px 120px 240px 0