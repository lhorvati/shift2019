/* ABOUT.STYL ======================================= */

#about
    .container
        flexbox()
        flex-flow: column nowrap
        position: relative


    .about__event,
    .about__talks,
    .about__workshops

        img
            position: absolute
            left: -70px
            top: 200px

        h2
            margin: 20px 0 30px 0

        p
            font-family: font2
            font-size: 13px
            color: black
            line-height: 30px

    .about__event
        width: 80%
        height: 400px
        margin: 150px 0 0 auto
        border: 18px solid colorBlue
        box-sizing: border-box
        padding: 50px 20px 50px 360px
        flexbox()
        justify-content: center
        flex-flow: column nowrap

    .about__wrap
        flexbox()
        justify-content: space-between
        margin-top: 20px
        
        .about__talks,
        .about__workshops
            width: 48%